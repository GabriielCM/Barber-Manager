// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============== AUTENTICAÇÃO ==============

enum UserRole {
  ADMIN
  USER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(USER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// ============== CLIENTES ==============

enum ClientStatus {
  ACTIVE
  INACTIVE
  BANNED
  DEFAULTER
}

model Client {
  id           String       @id @default(uuid())
  name         String
  phone        String
  email        String?
  birthDate    DateTime?
  observations String?
  status       ClientStatus @default(ACTIVE)
  totalSpent   Decimal      @default(0) @db.Decimal(10, 2)
  noShowCount  Int          @default(0)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  appointments  Appointment[]
  checkouts     Checkout[]
  notifications Notification[]
  subscriptions Subscription[]

  @@map("clients")
}

// ============== BARBEIROS ==============

model Barber {
  id           String   @id @default(uuid())
  name         String
  phone        String?
  email        String?
  specialties  String[]
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  services      BarberService[]
  appointments  Appointment[]
  checkouts     Checkout[]
  subscriptions Subscription[]

  @@map("barbers")
}

// ============== SERVIÇOS ==============

model Service {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  duration    Int      // duração em minutos
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  barbers             BarberService[]
  appointments        Appointment[]
  checkoutServices    CheckoutService[]
  subscriptions       Subscription[]
  packages            PackageService[]
  appointmentServices AppointmentService[]

  @@map("services")
}

// Relação N:N entre Barbeiros e Serviços
model BarberService {
  id        String   @id @default(uuid())
  barberId  String
  serviceId String
  createdAt DateTime @default(now())

  barber  Barber  @relation(fields: [barberId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([barberId, serviceId])
  @@map("barber_services")
}

// ============== PRODUTOS ==============

model ProductCategory {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]

  @@map("product_categories")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  categoryId  String
  quantity    Int      @default(0)
  minQuantity Int      @default(5) // estoque mínimo para alerta
  costPrice   Decimal  @db.Decimal(10, 2)
  salePrice   Decimal  @db.Decimal(10, 2)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category         ProductCategory    @relation(fields: [categoryId], references: [id])
  stockMovements   StockMovement[]
  checkoutProducts CheckoutProduct[]

  @@map("products")
}

// ============== MOVIMENTAÇÃO DE ESTOQUE ==============

enum StockMovementType {
  ENTRY
  EXIT
  ADJUSTMENT
}

model StockMovement {
  id           String            @id @default(uuid())
  productId    String
  type         StockMovementType
  quantity     Int
  previousQty  Int
  newQty       Int
  reason       String?
  checkoutId   String?
  createdAt    DateTime          @default(now())

  product  Product   @relation(fields: [productId], references: [id])
  checkout Checkout? @relation(fields: [checkoutId], references: [id])

  @@map("stock_movements")
}

// ============== AGENDAMENTOS ==============

enum AppointmentStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

model Appointment {
  id                    String            @id @default(uuid())
  clientId              String
  barberId              String
  serviceId             String?           // Opcional para compatibilidade com pacotes
  date                  DateTime
  status                AppointmentStatus @default(SCHEDULED)
  notes                 String?
  subscriptionId        String?
  isSubscriptionBased   Boolean           @default(false)
  subscriptionSlotIndex Int?
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt

  client              Client               @relation(fields: [clientId], references: [id], onDelete: Cascade)
  barber              Barber               @relation(fields: [barberId], references: [id])
  service             Service?             @relation(fields: [serviceId], references: [id])
  subscription        Subscription?        @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)
  checkout            Checkout?
  notifications       Notification[]
  appointmentServices AppointmentService[]

  @@index([subscriptionId])
  @@map("appointments")
}

// Relação N:N entre Agendamentos e Serviços (para pacotes com múltiplos serviços)
model AppointmentService {
  id            String   @id @default(uuid())
  appointmentId String
  serviceId     String
  createdAt     DateTime @default(now())

  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  service     Service     @relation(fields: [serviceId], references: [id])

  @@unique([appointmentId, serviceId])
  @@index([appointmentId])
  @@map("appointment_services")
}

// ============== CHECKOUT ==============

enum PaymentMethod {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  PIX
  TRANSFER
}

enum CheckoutStatus {
  PENDING
  COMPLETED
  CANCELLED
}

model Checkout {
  id              String         @id @default(uuid())
  appointmentId   String         @unique
  clientId        String
  barberId        String
  subtotal        Decimal        @db.Decimal(10, 2)
  discount        Decimal        @default(0) @db.Decimal(10, 2)
  discountPercent Decimal        @default(0) @db.Decimal(5, 2)
  total           Decimal        @db.Decimal(10, 2)
  paymentMethod   PaymentMethod?
  status          CheckoutStatus @default(PENDING)
  notes           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  appointment    Appointment       @relation(fields: [appointmentId], references: [id])
  client         Client            @relation(fields: [clientId], references: [id], onDelete: Cascade)
  barber         Barber            @relation(fields: [barberId], references: [id])
  services       CheckoutService[]
  products       CheckoutProduct[]
  stockMovements StockMovement[]
  transactions   FinancialTransaction[]

  @@map("checkouts")
}

model CheckoutService {
  id         String  @id @default(uuid())
  checkoutId String
  serviceId  String
  price      Decimal @db.Decimal(10, 2)
  isMain     Boolean @default(false) // serviço principal do agendamento

  checkout Checkout @relation(fields: [checkoutId], references: [id], onDelete: Cascade)
  service  Service  @relation(fields: [serviceId], references: [id])

  @@map("checkout_services")
}

model CheckoutProduct {
  id         String  @id @default(uuid())
  checkoutId String
  productId  String
  quantity   Int
  unitPrice  Decimal @db.Decimal(10, 2)
  total      Decimal @db.Decimal(10, 2)

  checkout Checkout @relation(fields: [checkoutId], references: [id], onDelete: Cascade)
  product  Product  @relation(fields: [productId], references: [id])

  @@map("checkout_products")
}

// ============== FINANCEIRO ==============

enum TransactionType {
  INCOME
  EXPENSE
}

enum TransactionCategory {
  SERVICE
  PRODUCT
  PACKAGE
  SUPPLIES
  RENT
  UTILITIES
  SALARY
  MAINTENANCE
  MARKETING
  OTHER
}

enum GoalType {
  REVENUE
  PROFIT
  CLIENTS
}

model FinancialGoal {
  id          String   @id @default(uuid())
  type        GoalType
  targetValue Decimal  @db.Decimal(10, 2)
  month       Int
  year        Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([type, month, year])
  @@map("financial_goals")
}

model FinancialTransaction {
  id          String              @id @default(uuid())
  type        TransactionType
  category    TransactionCategory
  description String
  amount      Decimal             @db.Decimal(10, 2)
  date        DateTime            @default(now())
  checkoutId  String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  checkout Checkout? @relation(fields: [checkoutId], references: [id])

  @@map("financial_transactions")
}

// ============== RELATÓRIOS (Cache para performance) ==============

model DailyCashFlow {
  id            String   @id @default(uuid())
  date          DateTime @unique @db.Date
  totalIncome   Decimal  @db.Decimal(10, 2)
  totalExpense  Decimal  @db.Decimal(10, 2)
  balance       Decimal  @db.Decimal(10, 2)
  serviceCount  Int
  productCount  Int
  clientCount   Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("daily_cash_flows")
}

// ============== WHATSAPP INTEGRATION ==============

enum WhatsAppConnectionStatus {
  DISCONNECTED
  CONNECTING
  CONNECTED
  QR_CODE_READY
  AUTHENTICATED
  FAILED
}

model WhatsAppSession {
  id              String                   @id @default(uuid())
  status          WhatsAppConnectionStatus @default(DISCONNECTED)
  qrCode          String?
  phoneNumber     String?
  sessionData     Json?
  lastConnectedAt DateTime?
  lastError       String?
  createdAt       DateTime                 @default(now())
  updatedAt       DateTime                 @updatedAt

  @@map("whatsapp_sessions")
}

enum NotificationType {
  APPOINTMENT_CREATED
  APPOINTMENT_CONFIRMED
  APPOINTMENT_CANCELLED
  APPOINTMENT_UPDATED
  APPOINTMENT_REMINDER_MORNING
  APPOINTMENT_REMINDER_1H
  APPOINTMENT_REMINDER_15M
  MANUAL_MESSAGE
}

enum NotificationStatus {
  PENDING
  SCHEDULED
  SENT
  DELIVERED
  READ
  FAILED
}

model Notification {
  id            String             @id @default(uuid())
  clientId      String
  appointmentId String?
  type          NotificationType
  status        NotificationStatus @default(PENDING)
  phoneNumber   String             // WhatsApp format: 5534999999999@c.us
  message       String
  scheduledFor  DateTime?          // When to send (for scheduled notifications)
  sentAt        DateTime?
  deliveredAt   DateTime?
  readAt        DateTime?
  errorMessage  String?
  attempts      Int                @default(0)
  maxAttempts   Int                @default(3)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  client      Client       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  appointment Appointment? @relation(fields: [appointmentId], references: [id], onDelete: Cascade)

  @@index([status, scheduledFor])
  @@index([clientId])
  @@index([appointmentId])
  @@map("notifications")
}

model WhatsAppLog {
  id        String   @id @default(uuid())
  level     String   // info, warn, error
  message   String
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@map("whatsapp_logs")
}

// ============== ASSINATURAS ==============

enum SubscriptionPlanType {
  WEEKLY       // A cada 7 dias
  BIWEEKLY     // A cada 14 dias
}

enum SubscriptionStatus {
  ACTIVE       // Assinatura ativa
  PAUSED       // Pausada temporariamente
  CANCELLED    // Cancelada
  COMPLETED    // Concluída (todos slots completados)
}

model Subscription {
  id                 String               @id @default(uuid())
  clientId           String
  barberId           String
  serviceId          String?              // Legacy field - será removido após migração
  packageId          String?              // Novo campo - será obrigatório após migração
  planType           SubscriptionPlanType
  status             SubscriptionStatus   @default(ACTIVE)
  startDate          DateTime             // Data/hora do primeiro agendamento
  endDate            DateTime             // Data final calculada
  durationMonths     Int                  // 1, 3 ou 6 meses
  totalSlots         Int                  // Total de agendamentos
  completedSlots     Int                  @default(0)
  notes              String?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  pausedAt           DateTime?
  cancelledAt        DateTime?
  cancellationReason String?

  client       Client                   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  barber       Barber                   @relation(fields: [barberId], references: [id])
  service      Service?                 @relation(fields: [serviceId], references: [id])
  package      Package?                 @relation(fields: [packageId], references: [id])
  appointments Appointment[]
  changeLogs   SubscriptionChangeLog[]

  @@index([clientId, status])
  @@index([barberId, status])
  @@index([packageId, status])
  @@index([status])
  @@map("subscriptions")
}

model SubscriptionChangeLog {
  id             String   @id @default(uuid())
  subscriptionId String
  changeType     String   // 'CREATED', 'PLAN_CHANGED', 'APPOINTMENT_ADJUSTED', 'PAUSED', 'RESUMED', 'CANCELLED', 'PACKAGE_UPDATED', 'PACKAGE_CHANGED'
  description    String
  oldValue       Json?
  newValue       Json?
  reason         String?
  createdAt      DateTime @default(now())

  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([subscriptionId])
  @@map("subscription_change_logs")
}

// ============== PACOTES ==============

model Package {
  id             String               @id @default(uuid())
  name           String
  description    String?
  planType       SubscriptionPlanType // WEEKLY ou BIWEEKLY
  basePrice      Decimal              @db.Decimal(10, 2) // Soma dos preços dos serviços
  discountAmount Decimal              @default(0) @db.Decimal(10, 2) // Desconto fixo em R$
  finalPrice     Decimal              @db.Decimal(10, 2) // basePrice - discountAmount
  isActive       Boolean              @default(true)
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  services      PackageService[]
  subscriptions Subscription[]

  @@index([isActive])
  @@map("packages")
}

// Relação N:N entre Pacotes e Serviços
model PackageService {
  id        String   @id @default(uuid())
  packageId String
  serviceId String
  createdAt DateTime @default(now())

  package Package @relation(fields: [packageId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Restrict)

  @@unique([packageId, serviceId])
  @@index([packageId])
  @@map("package_services")
}
